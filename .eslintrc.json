{
  "extends": ["next/core-web-vitals"],
  "plugins": ["import", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "tabWidth": 2,
        "printWidth": 100,
        "singleQuote": false,
        "bracketSpacing": true
      }
    ]
  },
  "overrides": [
  {
     "files": ["*.ts"],
    "processor": "@graphql-eslint/graphql"
},
    {
      "files": ["*.graphql"],
      "parser": "@graphql-eslint/eslint-plugin",
      "plugins": ["@graphql-eslint"],
      "rules": {
        "@graphql-eslint/known-type-names": "error"
      }
    }
  ]
}
