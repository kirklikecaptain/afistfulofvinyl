{
  "plugins": ["prettier"],
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 100
      }
    ],
    "import/order": [
      "error",
      {
        "newlines-between": "always",
        "pathGroups": [
          {
            "pattern": "~/**",
            "group": "external",
            "position": "after"
          }
        ]
      }
    ]
  }
}
