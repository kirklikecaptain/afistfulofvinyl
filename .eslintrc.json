{
  "extends": [
    "next/core-web-vitals",
    "plugin:storybook/recommended",
    "prettier"
  ],
  "plugins": ["import", "prettier"],
  "ignorePatterns": ["!.storybook"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "tabWidth": 2,
        "printWidth": 100,
        "singleQuote": false,
        "bracketSpacing": true
      }
    ]
  }
}
